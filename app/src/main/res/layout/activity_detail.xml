<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCC9D9"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/color4"
                android:layout_width="120dp"
                android:layout_height="40dp">
                <Button
                    android:layout_margin="90dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/back"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    tools:ignore="ContentDescription,InefficientWeight" />

                <Button
                    android:background="@drawable/more"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        tools:ignore="UselessLeaf" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/minum2d"/>

    </RelativeLayout>

    <LinearLayout
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_utama"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#6B6B6B"
                    android:text="Ginger Rush"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#9F9F9F"
                    android:text="Perpaduan teh hijau dengan madu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/color4"
                android:layout_width="90dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/bag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#6B6B6B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 27.000"
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/color4"
                android:layout_width="90dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/bag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf" >
            <TextView
                android:textColor="#6B6B6B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Produk"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#9F9F9F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum Dolor sheet amet \nLorem Ipsum Dolor sheet amet \nLorem Ipsum Dolor sheet amet" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/color4"
                android:layout_width="100dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"
                tools:ignore="UselessLeaf" />

            <Button
                android:elevation="5dp"
                android:background="@drawable/button_hijau"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beli Sekarang"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>